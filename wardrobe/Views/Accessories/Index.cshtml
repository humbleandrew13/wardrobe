@model IEnumerable<wardrobe.Models.Accessories>

@{
    ViewBag.Title = "Accessories";
}

<div class="type-views">
    <h2>Accessories in Your Closet</h2>

    <p>
        @Html.ActionLink("Put a New Accessory In Your Closet", "Create")
    </p>
</div>

<div class="type-views">
    <div class="row">
        @*A loop to show all the items entered by the user*@
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    @*If the user entered no photo link, it defaults to a pre-selected*@
                    @if (item.PhotoLink == null)
                    {
                        <img class="img-responsive" src="~/Content/Images/accessories.jpeg" />
                    }
                    else
                    {
                        <img class="img-responsive" src=@Url.Content(item.PhotoLink) alt="@Html.DisplayFor(modelItem => item.AccessoryNameDescription)">
                    }
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.AccessoryNameDescription)</h3>
                        <p>
                            @Html.ActionLink("View Details", "Details", "Accessories", new { id = item.AccessoryID }, new { @class = "btn btn-sm btn-default" })
                            @Html.ActionLink("Edit Details", "Edit", "Accessories", new { id = item.AccessoryID }, new { @class = "btn btn-sm btn-default" })
                        </p>
                        <p>    @Html.ActionLink("Remove Accessory From Closet", "Delete", "Accessories", new { id = item.AccessoryID }, new { @class = "btn btn-sm btn-default" })</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
